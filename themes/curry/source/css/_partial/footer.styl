#footer
  position relative
  right 0
  left 0
  bottom 0
  height footer-height
  background color-footer-background
  border-top 1px solid color-border
  color color-grey
  a
    color color-link
    text-decoration none
    &:hover
      text-decoration underline

#footer-info
  display flex
  justify-content flex-end
  margin 40px 0
  font-size 0.85em